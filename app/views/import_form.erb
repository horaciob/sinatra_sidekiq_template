<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Upload</title>
  <!-- Include Tailwind CSS (You may need to customize this link based on your setup) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100">

<div class="container mx-auto p-8">
  <!-- Merchants Uploader Form -->
  <form action="/bulk/merchants" method="post" enctype="multipart/form-data">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h5 class="text-2xl font-bold mb-4">Merchants Uploader</h5>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="file">
          Choose File
        </label>
        <input type="file" name="file" id="file" class="border rounded p-2 w-full">
      </div>
      <div class="flex items-center">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
          Upload
        </button>
      </div>
    </div>
  </form>

  <!-- Orders Uploader Form -->
  <form action="/bulk/orders" method="post" enctype="multipart/form-data" class="mt-8">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h5 class="text-2xl font-bold mb-4">Orders Uploader</h5>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="file">
          Choose File
        </label>
        <input type="file" name="file" id="file" class="border rounded p-2 w-full">
      </div>
      <div class="flex items-center">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
          Upload
        </button>
      </div>
    </div>
  </form>
</div>

<!-- Include Tailwind CSS (You may need to customize this link based on your setup) -->
<script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
</body>
</html>
